source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '10.0'
use_frameworks!

target 'Buddies' do
    pod 'WebexSDK', :git => 'https://github.com/webex/webex-ios-sdk.git', :branch => 'develop'
    pod 'FontAwesome.swift', '~> 1.3.2'
    pod 'Cartography', '~>3.0.0'
    pod 'SDWebImage'
    pod 'NVActivityIndicatorView'
    pod 'GTMNSStringHTMLAdditions'
    pod 'ObjectiveGumbo'
    pod 'Alamofire'
end

target 'BuddiesBroadcastExtension' do
    platform :ios, '11.2'
    pod 'WebexBroadcastExtensionKit', :git => 'https://github.com/webex/webex-ios-sdk.git', :branch => ‘master’
end
